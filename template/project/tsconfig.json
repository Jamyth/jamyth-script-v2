{
    "compilerOptions": {
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "baseUrl": "./src",
      "paths": {
        "module/*": ["module/*"],
        "component/*": ["component/*"],
        "asset/*": ["asset/*"],
        "util/*": ["util/*"]
      }
    },
    "include": ["./src/**/*"]
  }
  